generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  userId String? @unique
  isPortfolio Boolean? @default(false)
  isAdmin Boolean? @default(false)
  visitCount Int? @default(0)
  userIP String?
  userNames String[] @default([])
  countryName String?
  region String?
  city String?
  postal String?
  latitude String?
  longitude String?
  timezone String?
  org String?
  joinUTCDate DateTime?
  userVisits DateTime[]
  countryCode String?
  regionCode String?
}

model Error {
  id Int @id @default(autoincrement())
  dateTime DateTime
  userIP String?
  userId String?
  name String?
  message String?  @db.Text
  stack String? @db.Text
}
